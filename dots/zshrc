[ -r $HOME/antigen.zsh ] && source $HOME/antigen.zsh
[ -r /usr/local/share/antigen/antigen.zsh ] && source /usr/local/share/antigen/antigen.zsh


if which antigen > /dev/null; then
  #load the oh-my-zsh library
  antigen use oh-my-zsh

  # Set the theme
  # antigen-theme blinks # agnoster, juanghurtado
  # . $HOME/.powerline/powerline/bindings/zsh/powerline.zsh
  antigen bundle mafredri/zsh-async
  antigen bundle sindresorhus/pure

  BUNDLED_COMMANDS=(rubocop bluegreen)

  # Plugins
  antigen bundle github
  antigen bundle osx
  antigen bundle rails
  antigen bundle rake
  antigen bundle bundler
  antigen bundle zsh-users/zsh-syntax-highlighting
  antigen bundle wd

  # Finished loading antigen
  antigen apply
fi

# Custom
for file in ~/.zsh/{aliases,functions,completion}.zsh; do
	[ -r $file ] && source $file
done
unset file

# Include secrets...
[ -r ~/.secret ] && source ~/.secret
