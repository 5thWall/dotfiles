" Plugins yo!
set nocompatible
filetype plugin indent on

" matchit
runtime macros/matchit.vim

" powerline
set rtp+=~/.powerline/powerline/bindings/vim

runtime bundle/vim-pathogen/autoload/pathogen.vim
call pathogen#infect()

syntax on
filetype plugin indent on

set laststatus=2

set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set autoindent

set nu

" Make ex-mode tab completion work like zsh
set wildmenu
set wildmode=full

" longer history
set history=200
